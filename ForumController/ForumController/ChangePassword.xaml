<Window x:Class="ForumController.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePassword" Height="300" Width="300">
    <Grid>
        <Label Content="Old password:" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="New password:" Height="28" HorizontalAlignment="Left" Margin="10,58,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Content="Type new password again:" Height="28" HorizontalAlignment="Left" Margin="10,108,0,0" Name="label3" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="10,38,0,0" Name="OldPasswordBox" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="10,88,0,0" Name="New1PasswordBox" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="10,138,0,0" Name="New2PasswordBox" VerticalAlignment="Top" Width="120" />
        <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="10,168,0,0" Name="OkButton" VerticalAlignment="Top" Width="75" Click="OkButton_Click" />
        <Label Content="" Height="28" HorizontalAlignment="Left" Margin="10,221,0,0" Name="ErrorLabel" VerticalAlignment="Top" />
    </Grid>
</Window>
